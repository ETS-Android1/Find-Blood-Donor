<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/view_donors_filter_btn"
        style="?attr/materialButtonOutlinedStyle"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:padding="1dp"
        android:text="Filter"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        app:elevation="20dp"
        app:icon="@drawable/ic_baseline_filter_list_24"
        app:iconGravity="textEnd"
        android:layout_marginRight="11dp"
        app:iconPadding="4dp"
        app:iconSize="18dp"
        android:layout_marginTop="4dp"
        app:iconTint="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:strokeColor="@color/gray"

        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/grey"></Button>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/view_donors_recycler"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_donors_filter_btn"></androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>