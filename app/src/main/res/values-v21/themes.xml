<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Dark.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mycolor</item>
        <item name="colorPrimaryDark">#242E38</item>
        <item name="colorPrimaryVariant">#242E38</item>
        <item name="colorOnPrimary">#242E38</item>
        <item name="android:textColor">#242E38</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#242E38</item>
        <item name="android:textAppearance">@color/black</item>
        <item name="android:textColorPrimary">#242E38</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mycolor</item>


    </style>

    <style name="Theme.Dark.MyApplication.noAction" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mycolor</item>
        <item name="colorPrimaryDark">#242E38</item>
        <item name="colorPrimaryVariant">#242E38</item>
        <item name="colorOnPrimary">#242E38</item>
        <item name="android:textColor">#242E38</item>
        <item name="cursorColor">@color/mycolor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#242E38</item>
        <item name="android:textAppearance">@color/black</item>
        <item name="android:textColorPrimary">#242E38</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/mycolor</item>


    </style>

    <style name="Splash.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimary">@color/mycolor</item>
        <item name="colorPrimaryDark">#242E38</item>
        <item name="colorPrimaryVariant">#242E38</item>
        <item name="colorOnPrimary">#242E38</item>
        <item name="android:textColor">#242E38</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#242E38</item>
        <item name="android:textAppearance">@color/black</item>
        <item name="android:textColorPrimary">#242E38</item>
        <item name="fontFamily">@font/roboto_slab</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>


    </style>
</resources>